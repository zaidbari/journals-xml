{% extends "layout.twig" %}
{% block content  %}
<header class="bg-light py-5">
	<div class="container-fluid text-center">
			<h1>{{ meta.title }}</h1>
	</div>
</header>
<main class="container my-5">
</div>
		{% for article in data %}
			<article class="bg-light rounded p-5 mb-5">
				<span class="badge text-uppercase bg-primary badge-pill">{{ article.category }}</span>
				<h1 class="h5 mt-3 fw-bold">
					<a href="{{ _ENV('JOURNAL_DOMAIN') }}article?mno={{ article.mno }}">{{ article.title }}</a>
				</h1>
				<p class="font-italic">{{ article.authors }}</p>
				<div>
					<a class="btn btn-primary d-md-inline-block d-block mb-md-0 mb-2 text-left btn-sm" href="{{ _ENV('JOURNAL_DOMAIN') }}article?mno={{ article.mno }}">
							<i class="bi-file-earmark-ruled-fill pr-2"></i>
							<span>Abstract</span>
					</a>
					{% if article.pdf %}
						<a class="btn btn-danger d-md-inline-block d-block mb-md-0 mb-2 text-left btn-sm" href="{{ article.pdf }}" target="_blank" rel="noopener noreferrer">
							<i class="bi-file-pdf-fill pr-2"></i>
							<span>PDF</span>
						</a>
					{% endif %}
					<a class="btn btn-outline-secondary d-md-inline-block d-block mb-md-0 mb-2 text-left fw-bold btn-sm" target="_blank" rel="noopener noreferrer" href="https://doi.org/{{ article.doi }}">DOI: {{ article.doi }}</a>
				</div>
			</article>
		{% endfor %}

</main>
{%  endblock  %}