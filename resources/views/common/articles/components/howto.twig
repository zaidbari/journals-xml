<div class="tab-pane fade" id="how_cite" role="tabpanel" aria-labelledby="how_cite-tab">
{% for key,reference in references %}
	<div class="card bg-white shadow-sm border-primary mb-2" style="border-width: 0; border-left-width: 5px; border-left-style: solid; ">
		<div class="card-header">
			<h5 class="mb-0">
				<button class="btn btn-link fw-bold" type="button" data-bs-toggle="collapse" data-bs-target="#collapse{{ loop.index }}" aria-expanded="false" aria-controls="collapse{{ loop.index }}">
					{{ key }}
				</button>
			</h5>
		</div>
		<div id="collapse{{ loop.index }}" class="collapse" aria-labelledby="heading{{ loop.index }}" data-bs-parent="#how_cite">
			<div class="card-body">
				{{ reference | raw }}
			</div>
		</div>
	</div>
{% endfor %}
</div>
